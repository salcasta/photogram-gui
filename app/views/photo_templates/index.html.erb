<h1>List of photos</h1>

<form action="/insert_photo" method="post">
  <label for="image_box">Image</label>
  <input type="text" id="image_box" name="query_image">

  <label for="caption_box">Caption</label>
  <input type="textarea" id="caption_box" name="query_caption">

  <label for="owner_id_box">Owner ID</label>
  <input type="text" id="owner_id_box" name="query_owner_id">

  <button>Add photo</button>
</form>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |a_photo| %>
    <tr>
      <td>
        <img src="<%= a_photo.image %>" alt="pic">
      </td>

      <td><%= a_photo.caption %></td>

      <td><%= a_photo.poster.username %></td>

      <td><%= a_photo.created_at %></td>

      <td>
        <a href="/photos/<%= a_photo.id %>">Show details</a>
      </td>
    </tr>
  <% end %>

</table>
